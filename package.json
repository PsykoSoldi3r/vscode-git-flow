{
	"name": "vscode-git-flow",
	"displayName": "git flow",
	"description": "Manage git flow with this extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands":[
			{
				"command": "gitflow.init",
				"title": "Init",
				"category": "Git Flow"
			},
			{
				"command": "gitflow.refresh",
				"title": "Refresh",
				"category": "Git Flow",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "gitflow.checkout",
				"title": "Checkout",
				"category": "Git Flow"
			},
			{
				"command": "gitflow.start",
				"title": "Start",
				"category": "Git Flow",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "gitflow.finish",
				"title": "Finish",
				"category": "Git Flow"
			},
			{
				"command": "gitflow.branch.delete",
				"title": "Delete",
				"category": "Git Flow"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "gitflow.checkout",
					"when": "never"
				},
				{
					"command": "gitflow.branch.delete",
					"when": "never"
				},
				{
					"command": "gitflow.finish",
					"when": "never"
				},
				{
					"command": "gitflow.init",
					"when": "never"
				}
			],
			"view/item/context": [{
				"command": "gitflow.checkout",
				"group": "navigation"
			},{
				"command": "gitflow.finish",
				"group": "1"
			},{
				"command": "gitflow.branch.delete",
				"when": "view == gitflow.views.feature",
				"group": "7_modification"
			}],
			"view/title": [{
				"command": "gitflow.start",
				"when": "view == gitflow.views.feature",
				"group": "navigation"
			},{
				"command": "gitflow.refresh",
				"group": "navigation"
			}]
		},	
		"viewsContainers": {
			"activitybar": [
				{
					"id": "gitflow-explorer",
					"title": "Git Flow",
					"icon": "media/git-merge.svg"
				}
			]
		},
		"views": {
			"gitflow-explorer": [{
				"id": "gitflow.views.main",
				"name": "Git Flow",
				"when": "gitflow.initialized"
			}, {
				"id": "gitflow.views.feature",
				"name": "Features",
				"when": "gitflow.initialized"
			}]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
